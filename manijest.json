{
    "manifest_version": 2,
    "name": "Simple Calculator",
    "version": "1.0",
    "description": "A simple calculator application by Calibaba.",
    "author": "Caleb Babatunde",
    "icons": {
        "48": "icons/calculator-48.png",
        "128": "icons/calculator-128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/calculator-48.png"
        }
    },
    "permissions": [
        "activeTab"
    ]
}